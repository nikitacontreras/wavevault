{
  "name": "wavevault",
  "version": "1.0.9",
  "productName": "WaveVault",
  "description": "Premium YouTube Audio Downloader & Library Manager for Producers",
  "author": "Nikita Strike <nikita@strikemedia.com>",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run electron",
    "electron": "node scripts/build.js && electron src/main/boot.js",
    "start": "npm run build && electron dist/main/main.js",
    "build": "node scripts/build.js && tsc",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.strikemedia.wavevault",
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "dist/preload.js",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/yt-dlp-exec/bin/**",
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "nikitacontreras",
      "repo": "wavevault",
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.music",
      "icon": "build/icon.png",
      "identity": null,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Audio"
    }
  },
  "license": "ISC",
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.23",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "av": "^0.4.9",
    "axios": "^1.13.1",
    "bindings": "^1.5.0",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.562.0",
    "music-metadata": "^11.9.0",
    "music-tempo": "^1.0.3",
    "node-id3": "^0.2.9",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "speaker": "^0.5.5",
    "wavesurfer.js": "^7.12.1",
    "web-audio-api": "^0.2.2",
    "yt-dlp-exec": "^1.0.2"
  }
}
